//================== Информация о приеме мод окно ==============
.modal-frame-wrapper.modal-frame-right(frame-modal="visit-info")
	.modal-frame.flex-column
		.modal-frame__head.border-none.flex-box.flex-y-center.flex-between
			.text-24 Информация о приеме
			.icon-close(frame-close)
			
		.modal-frame__body
			.modal-table
				table
					tbody
						tr
							td Дата
							td.edit-visit-date
								.mydatepicker
									input.form-input(type="text" class="datepicker" value="20.04.2023")
						tr.edit-visit-time
							td Время
							td.flex-vertical-center.gap-16
								//== окошко  .tooltip-error-text отображается при наличии класса visible. Оно содержит информацию, что время не может быть выбрано. Сейчас по дефолту сделано отображаемым, что бы показать, что оно сверстано== 
								.tooltip-error-text.visible.tooltip-modal
									p Время недоступно,
									p выберите другое
									.btn.btn-32.mt-8.tooltip-close ок
								
								span c
								.flex-vertical-center.gap-4
									input.form-input(type="number" name="" value="09")
									span :
									input.form-input(type="number" name="" value="30")
								span до
								.flex-vertical-center.gap-4
									input.form-input(type="number" name="" value="10")
									span :
									input.form-input(type="number" name="" value="30")
						tr.doctor-info
							td Врач
							td
								span Лордкипанидзе Мария
								span Невролог
						tr
							td Цель визита
							td ПРИЕМ НЕВРОЛОГА
						tr
							td Канал привлечения
							td ВКонтакте
						tr.visiter-info
							td Пациент
							td
								a(href="visitor-edit-page.html")
									p
										span Миронов Роман
										span.edit-item(title="редактировать")
									span 8(792)196-48-84
										.copy-icon(title="копировать")
						tr
							td Возраст
							td 03.06.1989 (33 года)
		.modal-frame__footer.mt-auto
			.state-select.state-select--opentop
				.state-select-current(data-state="state-started") Начат прием
				.state-select-drop
					.state-select-drop__item(data-state="state-started") Начат прием
					.state-select-drop__item(data-state="state-confirm") Подтвержден
					.state-select-drop__item(data-state="state-notconfirm") Не подтвержден
					.state-select-drop__item(data-state="state-done") Выполнен
					.state-select-drop__item(data-state="state-cancel")  Отменен
					
			