
//================== Запись на прием через кабинет  ==============
.modal-frame-wrapper.modal-frame-right(frame-modal="appointment-modal")
	.modal-frame.flex-column
		.modal-frame__head.flex-box.flex-y-center.flex-between
			.text-24 Запись на прием
			.icon-close(frame-close)
			
		.modal-frame__body
			form.appointment-form
				.appointment-form-header
					.flex-box.btn-toggle-block
						label.btn--toggle
							input(type='radio' name='visitor-type'  class='filter-radiobtn' checked)
							.btn
								span Взрослый
						label.btn--toggle
							input(type='radio' name='visitor-type'  class='filter-radiobtn')
							.btn
								span Ребенок
						
						label.btn--toggle
							input(type='radio' name='visitor-type' class='filter-radiobtn')
							.btn
								span Недееспособный гражданин
				
				.appointment-form-body				
					
					.fieldset-group
						.title-18 Данные пациента
						
						.edit-empl-form__name.mb-32
							.form-box
								label.text-16 Фамилия
								input(type="text" value="Константинов").form-input
							.form-box
								label.text-16 Имя
								input(type="text" value="Констатин").form-input
							.form-box
								label.text-16 Отчество
								input(type="text" value="Констатинопольский").form-input
					
						.edit-empl-form__gender.flex-vertical-center.gap-32.mb-32
							.form-box
								label.text-16 Пол
								.flex-vertical-center.gap-32
									label.radiobutton-label.flex-box
										input(type='radio' value="men" name='gender-radio'  class='real-radio' checked)
										span.custom-radio
										span.custom-radio__text Мужской
									label.radiobutton-label.flex-box
										input(type='radio' value="woomen" name='gender-radio' class='real-radio')
										span.custom-radio
										span.custom-radio__text Женский
							
							.form-box
								label.text-16 Дата рождения
								.mydatepicker
									input.form-input(type="text" class="datepicker" )
					
					.edit-empl-form__contacts.mb-32.flex-vertical-center.gap-32
						.form-box
							label.text-16 Телефон
							input(type="text" ).form-input
						.form-box
							label.text-16 Дополнительный телефон
							input(type="text" ).form-input
					
					.fieldset-group
						.title-18 Дата и время приема

							
							.form-box
								label.text-16 Дата рождения
								.mydatepicker
									input.form-input(type="text" class="datepicker" )
				
				.form-btns.flex-vertical-center.gap-32.flex-between
					button.btn.btn--orange(frame-close) Отменить
					button.btn.btn--primary(type="submit") Сохранить
							