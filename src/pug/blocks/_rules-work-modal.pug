//================== Правило работы сотрудника-modal ==============
.modal-frame-wrapper.modal-frame-right.visible.rules-modal(frame-modal="rules-info")
	.modal-frame.flex-column
		.modal-frame__head.flex-box.flex-y-center.flex-between
			.text-24 Добавление правила графиков работы
			.icon-close(frame-close)
		form.rules-form
			.modal-frame__body
				.rules-form-block
					+custom-select-icon('Специальности', ['Стоматолог', 'Ортодонт', 'Консультация имплантолога', 'Ветеринар', 'Терапевт'], 'mySelect--absolute')
				
					.title-16 Период работы
					label.switch-toggle.flex-box.flex-y-center
						input(type='checkbox' id='check' class='toggle-switch')
						span.real-switch
						span.custom-switch__text Повторять
				
					.rules-form-fields.flex-vertical-center.gap-32
						.form-item
							.mydatepicker
								input.form-input(type="text" class="datepicker" value="Начало")
							
						.form-item
							.mydatepicker
								input.form-input(type="text" class="datepicker" value="Окончание")
						.form-item
							.mySelect.mySelect--absolute
								.mySelect-input
									input.selectValue.input-slim(type='text' readonly='' value='Выбрать день')
								.mySelect-drop.scroll-vertical
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox1' class='checkbox' )
										span.custom-checkbox 
										span.custom-checkbox__text Понед
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox2' class='checkbox')
										span.custom-checkbox 
										span.custom-checkbox__text Втор
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3' class='checkbox')
										span.custom-checkbox 
										span.custom-checkbox__text Сред
									
									button.btn Кнопка
							
				.rules-form-block
					.form-item
							input.form-input(type="text" placeholder="Начало")
							
					.form-item
							input.form-input(type="text" placeholder="Окончание")

			
			
			.modal-frame__footer.mt-auto.border-top
				p Выполнен