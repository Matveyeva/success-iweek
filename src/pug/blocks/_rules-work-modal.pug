//================== Правило работы сотрудника-modal ==============
.modal-frame-wrapper.modal-frame-right.rules-modal(frame-modal="rules-info")
	.modal-frame.flex-column.flex-box
		.modal-frame__head.flex-box.flex-y-center.flex-between
			.text-24 Добавление правила графиков работы
			.icon-close(frame-close)
		form.rules-form.flex-column.flex-box
			.modal-frame__body
				.rules-form-block
					+custom-select-icon('Специальности', ['Стоматолог', 'Ортодонт', ], 'mySelect--absolute')
				.rules-form-block
					.title-16.mb-16 Период работы
					label.switch-toggle.flex-box.flex-y-center
						input(type='checkbox'  class='toggle-switch')
						span.real-switch
						span.custom-switch__text Повторять
				
					.flex-form-fields.gap-32
						.form-item
							.mydatepicker
								input.form-input(type="text" class="datepicker" value="Начало")
							
						.form-item
							.mydatepicker
								input.form-input(type="text" class="datepicker" value="Окончание")
						.form-item
							.mySelect.mySelect--absolute.mySelect--multi#multi_day_picker
								.mySelect-input
									input.selectValue.input-slim(type='text' readonly='' value='Выбрать день' data-default='Выбрать день')
								.mySelect-drop
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox1' data-thumbnail="Пн")
										span.custom-checkbox 
										span.custom-checkbox__text Понедельник
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox2' data-thumbnail="Вт")
										span.custom-checkbox 
										span.custom-checkbox__text Вторник
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Ср")
										span.custom-checkbox 
										span.custom-checkbox__text Среда
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Чт")
										span.custom-checkbox 
										span.custom-checkbox__text Четверг
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Пт")
										span.custom-checkbox 
										span.custom-checkbox__text Пятница
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Сб")
										span.custom-checkbox 
										span.custom-checkbox__text Суббота
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Вс")
										span.custom-checkbox 
										span.custom-checkbox__text Воскресенье
									
									.mySelect-drop__btns.flex-vertical-center.gap-20.mt-16
										button.btn.btn-38.confirm Добавить
										button.btn.btn-38.btn--orange.cancel Отменить
										
							
				.rules-form-block
					.title-18.mb-24 Часы приема
					.flex-vertical-center.gap-32
						.form-item
							+custom-select-icon('Начало', ['8:00', '8:30', '9:00', '9:30', '10:00', '10:30', '11:00', '11:30', '12:00'], 'mySelect--absolute')
								
						.form-item
							+custom-select-icon('Окончание',  ['8:00', '8:30', '9:00', '9:30', '10:00', '10:30', '11:00', '11:30', '12:00'], 'mySelect--absolute')

				.rules-form-block
					.title-18.mb-24 Длительность приема
					.flex-vertical-center.gap-32
						.form-box
							label.text-16.text-gray3 Часы
							input.form-input(type="number" name="" )
						.form-box
							label.text-16.text-gray3 Минуты
							input.form-input(type="number" name="")

			
			
			.modal-frame__footer.mt-auto.flex-vertical-center.gap-20
				button.btn.btn-44 Добавить
				button.btn.btn-44.btn--orange Отменить
				
				
				