//================== Редактировать Правило работы сотрудника==============
.modal-frame-wrapper.modal-frame-right.rules-modal(frame-modal="edit-schedule-rules")
	.modal-frame.flex-column.flex-box
		.modal-frame__head.flex-box.flex-y-center.flex-between
			.text-24 Редактирование правила графиков работы
			.icon-close(frame-close)
		form.rules-form.flex-column.flex-box
			.modal-frame__body
				.rules-form-block
					+custom-select-icon2('Стоматолог', ['Стоматолог', 'Ортодонт',], 'mySelect--absolute')
				.rules-form-block
					.title-16.mb-16 Период работы
					label.switch-toggle.flex-box.flex-y-center
						input(type='checkbox'  class='toggle-switch' checked)
						span.real-switch
						span.custom-switch__text Повторять
				
					.flex-form-fields.gap-32
						.form-item
							.mydatepicker
								input.form-input(type="text" class="datepicker" value="15.02.2022")
							
						.form-item
							.mydatepicker
								input.form-input(type="text" class="datepicker" value="20.03.2022")
						.form-item
							.mySelect.mySelect--absolute.mySelect--multi#multi_day_picker
								.mySelect-input
									input.selectValue.input-slim(type='text' readonly='' value='пн, Вт' data-default='')
								.mySelect-drop
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox1'  data-thumbnail="Пн" checked)
										span.custom-checkbox 
										span.custom-checkbox__text Понедельник
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox2'  data-thumbnail="Вт" checked)
										span.custom-checkbox 
										span.custom-checkbox__text Вторник
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Ср")
										span.custom-checkbox 
										span.custom-checkbox__text Среда
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Чт")
										span.custom-checkbox 
										span.custom-checkbox__text Четверг
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Пт")
										span.custom-checkbox 
										span.custom-checkbox__text Пятница
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Сб")
										span.custom-checkbox 
										span.custom-checkbox__text Суббота
									
									label.checkbox-label.flex-box.flex-y-center
										input.real-checkbox(type='checkbox' name='form-checkbox3'  data-thumbnail="Вс")
										span.custom-checkbox 
										span.custom-checkbox__text Воскресенье
									
									.mySelect-drop__btns.flex-vertical-center.gap-32.mt-16
										button.btn.btn-38.btn--orange.cancel Отмена
										button.btn.btn-38.confirm Применить
							
				.rules-form-block
					.title-18.mb-24 Часы приема
					.flex-vertical-center.gap-32
						.form-item
							+custom-select-icon2('15:00', ['8:00', '8:30', '9:00', '9:30', '10:00', '10:30', '11:00', '11:30', '12:00', '12:30', '13:00', '13:30', '14:00', '14:30', '15:00', '15:30', '16:00', '16:30', '17:00', '17:30', '18:00', '18:30', '19:00', '19:30', '20:00'], 'mySelect--absolute')
								
						.form-item
							+custom-select-icon2('19:00',  ['8:00', '8:30', '9:00', '9:30', '10:00', '10:30', '11:00', '11:30', '12:00', '12:30', '13:00', '13:30', '14:00', '14:30', '15:00', '15:30', '16:00', '16:30', '17:00', '17:30', '18:00', '18:30', '19:00', '19:30', '20:00'], 'mySelect--absolute')

			
			
			.modal-frame__footer.mt-auto.border-top.flex-vertical-center.flex-between
				button.btn.btn-44.btn--orange Отмена
				button.btn.btn-44 Сохранить