include ../../layouts/_mixins-links.pug
block variables

doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")

		//====убрать синий цвет у ссылок в сафари ========
		meta(name="format-detection" content="telephone=no")
		link(rel="stylesheet", href="../fonts/fonts.css")
		link(rel="stylesheet", href="../css/main.css")
		title UI-KIT

	body.body-dashboard

		include ../../ui/ui-navigation.pug

		block content
			.container-dashboard
				h2 Форма

				.container-dashboard__content
					ul.ui-components
						li
							.inputs-group
								.form-box.form-box--icon-left
									.form-box-input
										.form-box__icon
											svg.svg-search
												use(href="./img/svg-sprite.svg#svg-search")
										input(type="text" placeholder="Поисковый запрос").form-input.form-input--64
								
								//===== выпадашка с городами =====
								+custom-select-icon('Батуми', ['Стоматолог', 'Ортодонт', 'Консультация имплантолога', 'Аллерголог', 'Терапевт'], 'mySelect--absolute mySelect-input--icon  mySelect--64',  'svg-location', '')
							pre.
								.inputs-group
									.form-box.form-box--icon-left
										.form-box-input
											.form-box__icon
												svg.svg-search
													use(href="./img/svg-sprite.svg#svg-search")
											input(type="text" placeholder="Поисковый запрос").form-input.form-input--64
							
							//===== выпадашка с городами =====
							+custom-select-icon('Батуми', ['Стоматолог', 'Ортодонт', 'Консультация имплантолога', 'Аллерголог', 'Терапевт'], 'mySelect--absolute mySelect-input--icon  mySelect--64',  'svg-location', '')
						
						li
							+custom-select-checkbox('Пациент',['Беридзе Н.', 'Чикрадзе Э.', 'Кипиани Д.'], 'mySelect--absolute' )
							pre.
								+custom-select-checkbox('Пациент',['Беридзе Н.', 'Чикрадзе Э.', 'Кипиани Д.'], 'mySelect--absolute' )
						
						li
							.form-box.form-box--icon-right
								label.text-16.text-gray3 инпут с иконкой справа
								.form-box-input
									.form-box__icon
										svg.svg-location
											use(href="../img/svg-sprite.svg#svg-location")
									input(type="text" placeholder="Поисковый запрос").form-input.form-input--64
								pre.
									.form-box.form-box--icon-right
										label.text-16.text-gray3 строка поиска
										.form-box-input
											.form-box__icon
												svg.svg-location
													use(href="./img/svg-sprite.svg#svg-location")
											input(type="text" placeholder="Поисковый запрос").form-input.form-input--64
						li
							.form-box.form-box--icon-left
								label.text-16.text-gray3 инпут с иконкой слева
								.form-box-input
									.form-box__icon
										svg.svg-search
											use(href="../img/svg-sprite.svg#svg-search")
									input(type="text" placeholder="Поисковый запрос").form-input.form-input--64
								pre.
									.form-box.form-box--icon-left
										label.text-16.text-gray3 строка поиска
										.form-box-input
											.form-box__icon
												svg.svg-search
													use(href="./img/svg-sprite.svg#svg-search")
											input(type="text" placeholder="Поисковый запрос").form-input.form-input--64
						li
							.form-box
								label.text-16.text-gray3 label text
								input(type="text" placeholder="Фамилия").form-input
							pre.
								.form-box
									label.text-16.text-gray3 label text
									input(type="text" placeholder="Фамилия").form-input
						li
							.form-box
								label.text-16.text-gray3 Инпут высотой 48пикс
								input(type="text" placeholder="Фамилия").form-input.form-input-48
							pre.
								.form-box
									label.text-16.text-gray3 label text
									input(type="text" placeholder="Фамилия").form-input.form-input-48
						
						li
							.form-box
								label.text-16.text-gray3 label text
								input(type="text" placeholder="Фамилия").form-input.input-notvalid
								.error-text Какой-то текст ошибки
							pre.
								.form-box
									label.text-16.text-gray3 label text
									input(type="text" placeholder="Фамилия").form-input.input-notvalid
									.error-text Какой-то текст ошибки
						
						br
						li
							.mySelect.mySelect--absolute.mySelect--dark.mySelect--radio.mySelect--currency
								.mySelect-input
									input.selectValue.input-slim(type='text' readonly='' value='RU • RUB')
								.mySelect-drop.scroll-vertical
									.mySelect-drop__row
										+custom-radio('country','EN', 'English')(class="role-country")
										+custom-radio('currency', 'USD','USD')(class="role-currency")
										
									.mySelect-drop__row
										+custom-radio('country', 'RU','Русский', 'checked')(class="role-country")
										+custom-radio('currency', 'RUB','RUB', 'checked')(class="role-currency")
									.mySelect-drop__row
										+custom-radio('country', 'GE', 'Georgian')(class="role-country")
										+custom-radio('currency', 'GEL','GEL')(class="role-currency")
										
						li
							h3 Чекбоксы
							label.checkbox-label.flex-box.flex-y-center
								input(type='checkbox' name='form-checkbox' class='real-checkbox')
								span.custom-checkbox 
								span.custom-checkbox__text Normal on
							pre.
								label.checkbox-label.flex-box.flex-y-center
									input(type='checkbox' name='form-checkbox' )
									span.custom-checkbox 
									span.custom-checkbox__text Normal on
						li
							h3 Радиокнопки
							label.radiobutton-label.flex-box
								input(type='radio' name='currency' value='usd' class='real-radio') 
								span.custom-radio 
								span.custom-radio__text USD
							label.radiobutton-label.flex-box
								input(type='radio' name='currency' value='gel' class='real-radio')
								span.custom-radio
								span.custom-radio__text GEL
							label.radiobutton-label.flex-box
								input(type='radio' name='currency' value='rub' class='real-radio')
								span.custom-radio
								span.custom-radio__text RUB
							pre.
								label.radiobutton-label.flex-box
									input(type='radio' name='currency' value='usd' class='real-radio') 
									span.custom-radio 
									span.custom-radio__text USD
								label.flex-box
									input(type='radio' name='currency' value='gel' class='real-radio')
									span.custom-radio
									span.custom-radio__text GEL
								label.flex-box
									input(type='radio' name='currency' value='rub' class='real-radio')
									span.custom-radio
									span.custom-radio__text RUB
						li
							h3 Switch-toggle
							label.switch-toggle.flex-box.flex-y-center
								input(type='checkbox'  class='toggle-switch')
								span.real-switch
								span.custom-switch__text Normal on
							pre.
								label.switch-toggle.flex-box.flex-y-center
									input(type='checkbox'  class='toggle-switch')
									span.real-switch
									span.custom-switch__text Normal on
						li
							label.radiobutton-badge
								input.label-radio(type='radio' name='date-radiobtn' )
								span.label-light Суббота, 22
						li
							h3 Чекбокс время приема к врачу
							.radiobutton-time__group
								label.radiobutton-time.flex-box.flex-y-center
									input(type='radio' name='time-radiobtn' class='timetable-radiobtn')
									span.radiobutton-checkbox 15:20

							pre.
								.radiobutton-time__group
									label.radiobutton-time.flex-box.flex-y-center
										input(type='radio' name='time-radiobtn' class='timetable-radiobtn')
										span.radiobutton-checkbox 15:20
						li
							h3 Переключатель фильтра
							.filter-toggle__block.flex-box-inline
								label.filter-toggle-item.filter-toggle-item--left 
									input(type='radio' name='toggle-radiobtn' class='filter-radiobtn') 
									span По рейтингу
								label.filter-toggle-item.filter-toggle-item--center 
									input(type='radio' name='toggle-radiobtn' class='filter-radiobtn')
									span По стоимости
								label.filter-toggle-item.filter-toggle-item--right 
									input(type='radio' name='toggle-radiobtn' class='filter-radiobtn')
									span По отзывам
							pre.
								.filter-toggle__block.flex-box.flex-y-center
									label.filter-toggle-item.filter-toggle-item--left
										input(type='radio' name='toggle-radiobtn' class='filter-radiobtn') 
										span.filter-toggle-text По рейтингу
									label.filter-toggle-item.filter-toggle-item--center
										input(type='radio' name='toggle-radiobtn' class='filter-radiobtn')
										span.filter-toggle-text По стоимости
									label.filter-toggle-item.filter-toggle-item--right
										input(type='radio' name='toggle-radiobtn' class='filter-radiobtn')
										span.filter-toggle-text По отзывам

				
		include ../../layouts/_ui.pug

