block variables

<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")

		//====убрать синий цвет у ссылок в сафари ========
		meta(name="format-detection" content="telephone=no")
		link(rel="stylesheet", href="../fonts/fonts.css")
		link(rel="stylesheet", href="../css/main.css")
		script(src="../js/main.js")
		title UI-KIT

	body.body-dashboard

		include ../../ui/ui-navigation.pug

		block content
			.container-dashboard
				h2 Иконки

				.container-dashboard__content
					ul.ui-components
						
						li
							.text-18 logo через png
							.li-box(style="background-color: blue;padding:10px;padding-bottom:10px")
								.logo
									img(src="../img/logo.png", width="136" alt="logo")
							pre.
								.logo
									img(src="./img/logo.png", width="136" alt="logo")
						li
							.text-18 logo через svg
							.li-box(style="background-color: blue;padding:10px;padding-bottom:10px")
							
								object(type="image/svg+xml" data="../svg-logo.svg" class="logo")

							pre.
								object(type="image/svg+xml" data="../svg-logo.svg" class="logo")
						
						li
							svg.svg-extra(width="20" height="20" )
								use(xlink:href="../svg-sprite.svg#extra")
							pre.
								svg.svg-extra(width="20" height="20" )
									use(xlink:href="./svg-sprite.svg#extra")
						li
							.li-box(style="background-color: blue;")
								svg.extra-white(width="24" height="24" )
									use(xlink:href="../svg-sprite.svg#extra-white")
							pre.
								svg.extra-white(width="24" height="24" )
									use(xlink:href="./svg-sprite.svg#extra-white")
						li
							svg.svg-heart(width="16" height="16" )
								use(xlink:href="../svg-sprite.svg#svg-heart")
							pre.
								svg.svg-heart(width="16" height="16" )
									use(xlink:href="./svg-sprite.svg#svg-heart")
	
						li
							label.check-label.flex-center
								input(type="checkbox")
								svg.svg-heart(width="16" height="16" )
									use(xlink:href="../svg-sprite.svg#svg-heart")
							pre.
								
								label.check-label.flex-center
									input(type="checkbox")
									svg.svg-heart(width="16" height="16" )
										use(xlink:href="../svg-sprite.svg#svg-heart")