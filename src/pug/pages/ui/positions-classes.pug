	body.body-dashboard

		include ../../ui/ui-navigation.pug

		block content
			.container-dashboard
				h2 Вспомогрательные классы

				.container-dashboard__content
					.block(style="margin-top:50px;")
						pre.
							.flex-box,.flex-center,.flex-x-center,.flex-x-right,.flex-y-center{
								display: flex!important;
							}
						pre.
							.flex-center{
								justify-content: center;
								align-items: center;
							}
						pre.
							.flex-x-center{
								justify-content: center;
							}
						pre.
							.flex-x-right{
								justify-content: flex-end;
							}
						pre.
							.flex-y-center{
								align-items: center;
							}
						pre.
							.m-auto{
								margin-left: auto;
								margin-right: auto;
							}
							.w-100{
								width: 100%!important;
							}
					