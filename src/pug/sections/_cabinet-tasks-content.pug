	.dashboard-table(data-role="dashboard")
		.dashboard-table-content.scroll-x
			.dashboard-table-column
				.dashboard-table-column__head.marker-color--orange Запланировано (3)
				.scroll-vertical(data-role="dashboard-column")
					.dashboard-table-column__wrapper
						.dashboard-table-card
						.dashboard-table-card
						.dashboard-table-card
						.dashboard-table-card
