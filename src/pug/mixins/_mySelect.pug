mixin custom-select-checkbox(placeText, items, addClass,  iconName, labelText)
	div(class="mySelect " + addClass)&attributes(attributes)
		if labelText
			label.text-16.text-gray3 #{labelText}
		.mySelect-input.form-box-input
			if  iconName
				.form-box__icon
					svg(class=" "+ iconName)
						use(href="./img/svg-sprite.svg#"+ iconName +"")
			
			input(class="selectValue form-input" type='text' readonly value=''+ placeText)
		.mySelect-drop.scroll-vertical
			each item in items
				label.checkbox-label.flex-box.flex-y-center
					input(type='checkbox' name='form-checkbox' class='real-checkbox')
					span.custom-checkbox 
					span.custom-checkbox__text #{item}