mixin cabHeader(arg)
	header.cabinet-header
		.container-large
			.cabinet-header__content.flex-vertical-center
				.cabinet-header__logo
					a(href="index.html").custom-logo
						img(src="./img/logo2.png", width="106" alt="logo")
				.cabinet-header__menu
					.myTabs-buttons
						each item in arg
							if item.addCl !==''
								a(href=""+item.link).btn-bt.myTabs-btn.active #{item.name}
							else
								a(href=""+item.link).btn-bt.myTabs-btn #{item.name}
				.cabinet-header__profile.flex-vertical-center.gap-32
					.select-work-place
						+custom-select-icon('Блюхера, 56', ['Блюхера, 56', 'ИП Вердашев', 'Клиника "Сова"','Гиппократ', 'Зеленое яблоко', 'Добрый доктор' ], 'mySelect--absolute')
					
					.help-info ?
					.customDrop.customDrop--right.drop-click-close
						.customDrop__btn.round-icon
							.icon-notify
						.customDrop__list
							.customDrop__list-item
								label.radiobutton-label.flex-box
									input(type='radio' name='currency' value='' class='real-radio') 
									span.custom-radio
									span.custom-radio__text Включить звук
							.customDrop__list-item
								label.radiobutton-label.flex-box
									input(type='radio' name='currency' value='' class='real-radio') 
									span.custom-radio
									span.custom-radio__text Выключить на 5 минут
							.customDrop__list-item
								label.radiobutton-label.flex-box
									input(type='radio' name='currency' value='' class='real-radio') 
									span.custom-radio
									span.custom-radio__text Выключить на 15 минут
							.customDrop__list-item
								label.radiobutton-label.flex-box
									input(type='radio' name='currency' value='' class='real-radio') 
									span.custom-radio
									span.custom-radio__text Выключить на 30 минут
					.cabinet-header__avatar ГМ